<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Button pressed/focused state -->
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="#A8A9AB" /> <!-- Contoh warna saat ditekan -->
        <corners android:radius="20dp" /> <!-- Bulat dengan radius 8dp -->
    </shape>
</item>

<!-- Default button state -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#FFFFFF" /> <!-- Warna default dari button -->
        <corners android:radius="20dp" />
    </shape>
</item>
</selector>